<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/zappos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/zappos"
        android:textColor="@color/textColor"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/ilove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/zappos"
        android:layout_centerHorizontal="true"
        android:text="@string/ilove"
        android:textColor="@color/textColor"
        android:textSize="50sp" />

    <ImageView
        android:id="@+id/heart"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/heart" />

    <TextView
        android:id="@+id/built"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/heart"
        android:layout_toStartOf="@id/heart"
        android:text="BUILT WITH"
        android:textColor="@color/textColor"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button_explore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/zappos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:text="@string/explore"
        android:textColor="@color/textColor"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/maitray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@id/heart"
        android:layout_toRightOf="@id/heart"
        android:text="@string/maitray"
        android:textColor="@color/textColor"
        android:textSize="12sp" />


</RelativeLayout>
